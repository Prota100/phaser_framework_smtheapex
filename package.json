{
  "name": "@smtheapex/phaser-framework",
  "version": "1.0.0",
  "description": "Modular Phaser 3 Framework with RexUI and DOM integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "http-server dist -p 3000 -c-1 --cors",
    "start": "npm run dev",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 'examples/**/*.{html,css,js,png,jpg,jpeg,gif,svg,mp3,wav,json,ico}' dist/",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "preview": "npm run build && npm run serve",
    "vite:dev": "vite",
    "vite:build": "tsc && vite build",
    "vite:preview": "vite preview",
    "vercel-build": "npm run vite:build",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "phaser3",
    "game-framework",
    "rexui",
    "typescript",
    "dom-integration"
  ],
  "author": "smtheapex",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.90.0",
    "phaser3-rex-plugins": "^1.80.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "terser": "^5.43.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0",
    "vercel": "^33.7.1",
    "vite": "^5.4.19"
  },
  "peerDependencies": {
    "phaser": "^3.90.0"
  }
}
